<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_facebook_button_background_color_disabled"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".CheckReservActivity">

    <TabHost
        android:id="@+id/tabs1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/com_facebook_button_background_color_disabled"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/com_facebook_button_background_color_disabled">

                <ScrollView
                    android:id="@+id/scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/정보"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:background="@color/cardview_light_background"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/salename"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="1"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/saleprice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:paddingLeft="20dp"
                            android:text="메뉴 정보"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardview_light_background"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="시술구성"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/salecompo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="시술 구성"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardview_light_background"
                            android:orientation="horizontal"
                            android:paddingBottom="30dp">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="소요시간"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/saletime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="소요 시간"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:paddingLeft="20dp"
                            android:paddingTop="30dp"
                            android:text="주의 사항"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/salecaution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:text="9"
                            android:textSize="15sp" />


                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/cardview_light_background"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:text="판매자 정보"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/res"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/cardview_light_background"
                                android:paddingLeft="20dp"
                                android:text="판매자 아이디"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/reserv_staffid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/cardview_light_background"
                                android:paddingLeft="20dp"
                                android:text="판매자"
                                android:textAppearance="@style/TextAppearance.AppCompat"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:text="위치"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/saleshop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:paddingBottom="10dp"
                            android:paddingLeft="25dp"
                            android:text="9"
                            android:textSize="15sp" />

                        <fragment
                            android:id="@+id/innermap"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:text="구매 정보 및 동의"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/cardview_light_background"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="10dp"
                                    android:text="구매자*" />

                                <EditText
                                    android:id="@+id/editID"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="4"
                                    android:hint="[필수] 아이디"
                                    android:paddingRight="60dp"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="10dp"
                                    android:text="연락처*" />

                                <EditText
                                    android:id="@+id/phone"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="4"
                                    android:hint="[필수] 휴대폰 번호( - 제외 )"
                                    android:paddingRight="20dp"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="10dp"
                                    android:text="요청사항" />

                                <EditText
                                    android:id="@+id/require_txt"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="4"
                                    android:hint="요청사항 작성"
                                    android:paddingBottom="10dp"
                                    android:paddingRight="20dp"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:text="결제수단 선택"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardview_light_background"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"></RadioButton>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:text="즉시 결제"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:paddingLeft="5dp"
                                    android:src="@drawable/kakaopayimg" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp"
                                android:paddingTop="20dp">

                                <CheckBox
                                    android:id="@+id/checkboxall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:text="전체 동의"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp">

                                <CheckBox
                                    android:id="@+id/checkbox1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:text="상기 결제 내역을 확인, 결제 진행에 동의"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">

                                <CheckBox
                                    android:id="@+id/checkbox2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:text="취소/변경/환불 수수료 확인하였으며, 동의" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="70dp"
                                android:paddingLeft="10dp">

                                <CheckBox
                                    android:id="@+id/checkbox3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="20dp"
                                    android:text="개인정보 제 3자 제공에 동의" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </ScrollView>

                <LinearLayout
                    android:id="@+id/리뷰"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/com_facebook_button_background_color_disabled"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_all"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/com_facebook_button_background_color_disabled"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/linear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/cardview_light_background"
                            android:orientation="vertical"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/rate_score_reserv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="TextView"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textSize="24sp" />

                            <RatingBar
                                android:id="@+id/ratebar_rev_reserv"
                                style="?android:attr/ratingBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:isIndicator="true"
                                android:numStars="5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingBottom="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/check_rev_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/review" />

                                <TextView
                                    android:id="@+id/rev_member"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:text="*명"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rev_recy"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="35dp"
                                android:background="@color/com_facebook_button_background_color_disabled"
                                android:paddingTop="5dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <Button
        android:id="@+id/btn_buy"
        style="@style/com_facebook_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:fontFamily="monospace"
        android:text="구매하기"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

</RelativeLayout>